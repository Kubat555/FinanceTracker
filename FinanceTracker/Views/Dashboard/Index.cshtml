@{
    ViewData["isDashboard"] = true;
}


<div class="row mb-4">
    <div class="col-md-12">
        <form method="get" action="@Url.Action("Index", "Dashboard")" class="d-flex flex-row align-items-center justify-content-around widget">
            <h5 class="p-3" >Choose the date:</h5>
            <ejs-datepicker id="startDate" name="startDate" placeholder="StartDate" format="MMM-dd-yyyy" width="250px" value="@ViewBag.StartDate"></ejs-datepicker>
            <ejs-datepicker id="endDate" name="endDate" placeholder="EndDate" format="MMM-dd-yyyy" width="250px"value="@ViewBag.EndDate"></ejs-datepicker>
            <div>
                <button class="btn btn-success" type="submit">Apply</button>
            </div>
        </form>
    </div>
</div>


